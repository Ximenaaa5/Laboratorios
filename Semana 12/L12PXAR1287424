print("Semana 12: Ejercicio 1")
print("a. Sumatoria")
print("b. Factorial")
print("c. Tablas de Multiplicar")
print("d. Número perfeto")
opcion=input("Elija una opción a calcular: ")

match(opcion):
      case "a":
        N=0
        while N<=0:
            N=int(input("Ingrese un número entero positivo:"))
            if N<=0:
                print("EL número ingresado debe ser entero positivo")
        sumatoria=0
        for cont in range(1,N+1):
            sumatoria+=cont 
        print("La sumatoria es:",sumatoria)
        case"b": 
        N=0
        while N<=0:
            N=int(input("Ingrese un numero entero positivo: "))
            if N<=0:
                print("El numero ingresado debe ser entero positivo.")
        factorial=1
        for cont in range(1,N+1):
            factorial*=cont
        for i in range (1,11):
            for j in range(1,11):
                print(i*j,"\t",end='')
            print()
        case:
        print("Elija una opcion valida")